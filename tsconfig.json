{
  "compilerOptions": {
    "allowJs": true,
    //* breaks path aliases if baseURL not set
    "baseUrl": ".",
    // "target": "ES2022",
    "paths": {
      "$assets/*": ["src/assets/*"],
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"],
      "$scripts/*": ["src/scripts/*"],
      "$styles/*": ["src/styles/*"]
    },
    "verbatimModuleSyntax": true
  },
  "extends": "astro/tsconfigs/strict",
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro",
    "eslintrc.cjs",
    "astro.config.mjs",
    "globals.d.ts"
  ]
}
